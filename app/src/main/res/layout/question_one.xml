<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--  Start : Your code should be within this block -->
    <TextView
        android:id="@+id/textView11"
        android:layout_width="143dp"
        android:layout_height="41dp"
        android:text="       " />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="187dp"
        android:layout_height="51dp"
        android:text="  Question 1"
        android:textSize="30sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:text="     Which brand of phone will you choose if you are going to buy a new one?"
        android:textSize="24sp" />

    <RadioGroup
        android:id="@+id/q1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/q11"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:buttonTint="#009688"
            android:text="Iphone" />
        <RadioButton
            android:id="@+id/q12"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:text="Nokia"
            android:buttonTint="#009688" />
        <RadioButton
            android:id="@+id/q13"
            android:layout_width="106dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:text="Samsung"
            android:buttonTint="#009688" />
        <RadioButton
            android:id="@+id/q14"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:buttonTint="#009688"
            android:text="Mi" />
        <RadioButton
            android:id="@+id/q15"
            android:layout_width="106dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:buttonTint="#009688"
            android:text="Lenovo" />
        <RadioButton
            android:id="@+id/q16"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:buttonTint="#009688"
            android:text="Sony" />
        <RadioButton
            android:id="@+id/q17"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:buttonTint="#009688"
            android:text="Others" />

    </RadioGroup>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom"
        android:orientation="vertical">
    <Button
        android:id="@+id/btn_q1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="#009688"
        android:text="Next"
        android:textSize="30sp"
        android:layout_marginHorizontal="10dp"
/>
    </LinearLayout>
    <!-- END    : Your code should be within this block -->

</LinearLayout>
