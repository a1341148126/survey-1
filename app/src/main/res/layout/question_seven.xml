<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--  Start : Your code should be within this block -->
    <TextView
        android:id="@+id/textView71"
        android:layout_width="143dp"
        android:layout_height="41dp"
        android:text="       " />

    <TextView
        android:id="@+id/textView72"
        android:layout_width="187dp"
        android:layout_height="51dp"
        android:text="  Question 7"
        android:textSize="30sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView73"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:text="     In which condition will you buy a new phone?"
        android:textSize="24sp" />
    <RadioGroup
        android:id="@+id/q7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RadioButton
        android:id="@+id/q71"
        android:layout_width="304dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:buttonTint="#009688"
        android:text="When the old phone has been used for a year or two.(but it still works)" />

    <RadioButton
        android:id="@+id/q72"
        android:layout_width="304dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:buttonTint="#009688"
        android:text="When the old phone has been used for more than three years.(but it still works)" />

    <RadioButton
        android:id="@+id/q73"
        android:layout_width="304dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:buttonTint="#009688"
        android:text="When the old phone breaks down." />

    <RadioButton
        android:id="@+id/q74"
        android:layout_width="304dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:buttonTint="#009688"
        android:text="When a new phone is released." />


    <RadioButton
        android:id="@+id/q75"
        android:layout_width="102dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:buttonTint="#009688"
        android:text="Others." />
    </RadioGroup>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_q7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="#009688"
            android:text="Next"
            android:textSize="30sp"
            android:layout_marginHorizontal="10dp" />
    </LinearLayout>

    <!-- END    : Your code should be within this block -->

</LinearLayout>
